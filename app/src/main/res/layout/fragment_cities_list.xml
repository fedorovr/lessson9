<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.csc.roman_fedorov.weatherapp.CitiesListFragment">

    <EditText
        android:id="@+id/input_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/query_city_button"
        android:layout_toLeftOf="@+id/query_city_button"
        android:layout_toStartOf="@+id/query_city_button"
        android:hint="@string/city_name_hint"
        android:inputType="text" />

    <Button
        android:id="@+id/query_city_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/get_weather_button" />

    <ListView
        android:id="@+id/cities_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_city"/>


</RelativeLayout>
